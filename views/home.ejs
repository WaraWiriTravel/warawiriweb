<!-- Pemanggilan bagian header -->
<%- include("partials/header") %>
<!-- Pemanggilan bagian Navbar -->
<%- include("partials/navbar") %>

<!-- Start home  -->
<section id="slider" class="pt-5">
  <div class="container">
    <div class="row text-center mb-3">
      <div class="col-md-10">
        <h5>"Lebih Baik Sekali Melihat Dari Pada Seribu Kali Mendengar"</h5>
      </div>
      <div class="col-md-2">
        <a href="/pricing"
          ><button class="bn632-hover bn26">Jelajahi Lagi</button></a
        >
      </div>
    </div>

    <div class="slider">
      <div class="owl-carousel">
        <% highlightBlogs.forEach(blog => { %>
        <div class="slider-card">
          <div class="d-flex justify-content-center align-items-center mb-4">
            <img src="<%= blog.imageUrl %>" alt="" />
          </div>
          <div class="position-absolute bottom-0 start-0 text-center w-100">
            <h5><b><%= blog.title.substring(0,30) %>...</b></h5>
            <p><%= blog.content.substring(0, 50) %>...</p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</section>

<!-- End home -->
<!-- Pemanggilan bagian footer -->
<%- include("partials/footer") %>
