<!-- Pemanggilan bagian header -->
<%- include("partials/header") %>
<!-- Pemanggilan bagian Navbar -->
<%- include("partials/navbar") %>

<!-- Start Blog -->
<style>
  .card-img-container {
    width: 100%;
    height: 200px;
    background-position: center;
    background-size: cover;
    border-radius: 10px;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-title {
    height: 2.4em;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-text {
    height: 5.6em;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>

<div class="container">
  <h4 class="text-center">Apa yang Apa yang baru dari Wara Wiri Tour ?</h4>
  <div class="row">
    <%let highlightBlog = blogs[0]; %>
    <div class="row mb-3">
      <div class="col-md-4">
        <div class="card-img-container" style="background-image: url('<%= highlightBlog.imageUrl %>')"></div>
      </div>
      <div class="col-md-8">
        <h5><%= highlightBlog.title %></h5>
        <p><%= highlightBlog.content %></p>
        <a href="/blog-detail-<%= highlightBlog.title %>" class="btn btn-primary">Lihat Selengkapnya</a>
      </div>
    </div>
    <% for(let i = 1; i < blogs.length; i++) { %>
      <% let blog = blogs[i]; %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-img-container" style="background-image: url('<%= blog.imageUrl %>')"></div>
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= blog.content %></p>
            <a href="/blog-detail-<%= blog.title %>" class="btn btn-primary">Lihat Selengkapnya</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
<!-- End Blog -->

<!-- Pemanggilan bagian footer -->
<%- include("partials/footer") %>