<!-- Pemanggilan bagian header -->
<%- include("partials/header") %>
<style>
  body {
    background-color: #e2edff;
  }
  .centerDiv {
    height: 100vh;
    width: 100%;
  }
</style>
<body>
  <div class="container">
    <div class="row centerDiv justify-content-center">
      <div class="col-md-5 my-auto">
        <div class="card">
          <div class="card-body">
            <div class="text-center">
              <img
                src="/img/warawiri-logo.svg"
                class="img-fluid"
                width="80"
                height="100"
                alt="logo Wara Wiri Tour"
              />
              <h4 class="h5 mt-4">Login</h4>
            </div>
            <form action="/login" method="post">
              <div class="mb-3">
                <label for="username">Username</label>
                <input
                  type="tet"
                  class="form-control"
                  id="username"
                  name="username"
                  placeholder="Username Anda"
                />
              </div>
              <div class="mb-3">
                <label for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password Anda"
                />
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary w-50">
                  Masuk
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
