<!-- Pemanggilan bagian sidebar -->
<%- include("sidebar") %>

<div class="container-fluid my-5 px-5">
  <div class="row text-center">
    <div class="col"><h1 class="mb-4">Newsletter</h1></div>
    <div class="col">
      <h1 class="mb-4">Umumkan Berita Baru</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="text-center p-5">
        <form method="POST" action="#" enctype="multipart/form-data">
          <div class="row g-3 mb-3">
            <div class="col-lg-12 col-sm-6 mb-4">
              <input required type="text" class="form-control border-2" placeholder="Nama Promo" style="height: 55px" name="nama" />
            </div>
            <div class="col-12 col-sm-6 mb-4">
              <select class="form-control border-2" aria-label="Default select example">
                <option selected>Pilih paket atau blog</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
            <div class="col-12 col-sm-6">
              <select class="form-control border-2" aria-label="Default select example">
                <option selected>Cantumkan paket atau blog</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
            <div class="col-lg-12 col-sm-6 mb-4">
              <textarea class="form-control" id="paket" name="paket" placeholder="Penjelasan Paket" required> </textarea>
            </div>
            <div class="col-12">
              <button class="btn btn-primary w-50 py-3" type="submit">Add</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
