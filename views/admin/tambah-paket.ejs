<!-- Pemanggilan bagian sidebar -->
<%- include("sidebar") %>

<div class="container-fluid my-5 px-5">
  <div class="row">
    <div class="col"><h3 class="mb-4">Paket</h3></div>
    <div class="col">
      <h3 class="mb-4">Tambah Paket</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="text-center p-5">
        <form method="POST" action="/createItem" enctype="multipart/form-data">
          <div class="row g-3 mb-3">
            <div class="col-12 col-sm-6 mb-4">
              <input
                required
                type="text"
                class="form-control border-2"
                placeholder="Nama Paket"
                style="height: 55px"
                name="nama"
                id="nama"
              />
            </div>
            <div class="col-12 col-sm-6">
              <input
                required
                type="text"
                class="form-control border-2"
                placeholder="Keterangan Paket 1"
                style="height: 55px"
                name="minHarga"
                id="minHarga"
              />
            </div>
            <div class="col-12 col-sm-6">
              <input
                required
                type="file"
                class="form-control border-2"
                style="height: 55px"
                name="gambar"
                id="gambar"
                multiple
              />
            </div>
            <div class="col-12 col-sm-6 mb-4">
              <input
                required
                type="text"
                class="form-control border-2"
                placeholder="Keterangan Paket 2"
                style="height: 55px"
                name="maxHarga"
                id="maxHarga"
              />
            </div>
            <div class="col-12 col-sm-12 mb-4">
              <textarea
                class="form-control"
                id="desc"
                name="desc"
                placeholder="Penjelasan Paket"
                required
                rows="15"
              ></textarea>
            </div>
            <div class="col-12">
              <button class="btn btn-primary w-50 py-3" type="submit">
                Add
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
