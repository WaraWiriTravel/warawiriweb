<!-- Pemanggilan bagian sidebar -->
<%- include("sidebar") %>
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="row mt-5">
    <div class="col"><h3 class="mb-4 text-gray-800">Blog</h3></div>
    <div class="col">
      <h3 class="mb-4 text-gray-800">
        Edit Berita
        <button class="rounded-circle"><i class="fa-solid fa-plus"></i></button>
      </h3>
    </div>
  </div>
  <!-- Form -->
  <div class="row">
    <div class="col-lg-12">
      <form method="POST" action="/updatepost" enctype="multipart/form-data">
        <!--  ID  -->
        <div class="form-group">
          <!-- <label for="ID">Blog#ID</label> -->
          <input
            type="text"
            class="form-control"
            id="ID"
            name="ID"
            required
            value="<%= query.documentID %>"
            readonly
            hidden
          />
        </div>
        <!--  Berita  -->
        <div class="form-group">
          <label for="Judul">Judul</label>
          <input
            type="text"
            placeholder="Judul Berita"
            class="form-control"
            id="judul"
            name="judul"
            required
            value="<%= query.title %>"
          />
        </div>
        <!-- Gambar -->
        <div class="form-group" id="currentImageGroup" style="display: block">
          <label for="image" style="display: inline-block"
            >Current Image:</label
          >
          <button
            type="button"
            id="changeImageButton"
            onclick="toggleImageInput()"
            style="display: inline-block"
          >
            Change Image
          </button>
          <img
            src="<%= query.imageUrl %>"
            alt="Current Image"
            id="currentImage"
            style="max-width: 30vw; max-height: 30vh"
            class="img-fluid rounded-4 mx-auto d-block pt-3 img-thumbnail"
          />
        </div>
        <div class="form-group" id="newImageGroup" style="display: none">
          <label for="newImage">New Image:</label>
          <input
            type="file"
            name="newImage"
            id="newImage"
            accept="image/jpeg, image/jpg, image/png"
          />
          <button type="button" id="cancelButton" onclick="toggleImageInput()">
            Cancel
          </button>
        </div>
        <!-- Berita -->
        <div class="form-group">
          <label for="Berita">Berita</label>
          <textarea
            class="form-control"
            id="Berita"
            name="Berita"
            required
            rows="15"
          >
<%= query.content %></textarea
          >
        </div>
        <!-- Berita -->
        <div class="form-group">
          <input type="checkbox" name="status" id="status" <% if (query.status
          === "on") { %>checked<% } %> /> Jadikan Highlight
        </div>

        <!-- Submit Button -->

        <button type="submit" class="btn btn-primary">
          Simpan <i class="fa-regular fa-floppy-disk"></i>
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  function toggleImageInput() {
    const currentImageGroup = document.getElementById("currentImageGroup");
    const newImageGroup = document.getElementById("newImageGroup");

    if (currentImageGroup.style.display === "block") {
      currentImageGroup.style.display = "none";
      newImageGroup.style.display = "block";
    } else {
      currentImageGroup.style.display = "block";
      newImageGroup.style.display = "none";
    }
  }
</script>
